{
  "name": "heartsongs-bot-service",
  "version": "1.0.0",
  "description": "AI Bot Service for Heart Songs Game",
  "main": "index.js",
  "scripts": {
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage production", 
    "test": "node test/test-bot-service.js",
    "test:cleanup": "node test/test-cleanup.js",
    "test:debug": "node test/debug-test.js",
    "invoke:cleanup": "aws lambda invoke --function-name heartsongs-bot-service-dev-cleanup-bot response.json && cat response.json",
    "logs:cleanup": "serverless logs -f cleanup-bot --stage dev",
    "logs:spawn": "serverless logs -f spawn-bot --stage dev",
    "logs:worker": "serverless logs -f bot-worker --stage dev",
    "remove:dev": "serverless remove --stage dev",
    "offline": "serverless offline"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "aws-sdk": "^2.1490.0"
  },
  "devDependencies": {
    "serverless-offline": "^13.3.0"
  }
}
